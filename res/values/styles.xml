<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="ETWTheme" parent="@android:style/Theme.Holo.Light">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/ETWActionBarStyle</item>
        <!-- <item name="android:actionBarItemBackground">@drawable/action_item_bg</item> -->
    </style>
    
    <style name="ETWActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/actionbar_bg</item>
        <item name="android:titleTextStyle">@style/ETWTextAppearance</item>
        <item name="android:indeterminateProgressStyle">@style/IndeterminateProgress</item>
    </style>
	<style name="ETWTextAppearance">
	    <item name="android:textSize">16sp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textColor">#253e4f</item>
	    <item name="android:textAllCaps">true</item>
    </style>
	    <style name="SelectGroupDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
	</style>
    <style name="IndeterminateProgress" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:minWidth">56dip</item>
        <item name="android:maxWidth">56dip</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="NoTitleDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
	</style>
</resources>
